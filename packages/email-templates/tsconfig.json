{
  "root": true,
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
